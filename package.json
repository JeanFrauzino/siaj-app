  "build": {
    "appId": "com.siajgo.app",
    "publish": [
        {
            "provider": "github",
            "owner": "JeanFrauzino", 
            "repo": "NOME_DO_SEU_REPO_NO_GITHUB" 
        }
    ],
    "productName": "SIAJ-GO",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!worker.js",
      "!verificar_modelos.js",
      "!whatsapp-session/**", 
      "!gerador_licenca.js"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/chromium/**",
      "node_modules/puppeteer-core/**",
      "node_modules/puppeteer-extra/**",
      "node_modules/whatsapp-web.js/**"
    ],
    "win": {
      "icon": "icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SIAJ-GO"
    }
  }
}
